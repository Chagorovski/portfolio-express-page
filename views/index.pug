extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | My name is Vladimir Chagorovski and I'm a curiosity-driven full-stack web developer.
        | Thank you for dropping by and I hope you stick around and check out some of my work featured on my projects bellow
        | This site was built using Node.js and Express. You can view the GitHub repo for this and any of my other projects
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.main_img}`)
            h5= project.project_name
      
